<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#142F52"
    tools:context="pku.ss.kitty.myweather.SelectCity">

    <RelativeLayout
        android:id="@+id/select_city_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="#ffcd2626" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="当前城市：北京"
            android:textColor="#ffffffff"
            android:textSize="20dip" />
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />
        <ImageView
            android:layout_width="1dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_back"
            android:background="#A71717"
            android:gravity="center"/>

    </RelativeLayout>
    
    <EditText
        android:id="@+id/search_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_city_title"
        android:layout_margin="10dip"
        android:drawableLeft="@drawable/magnifying_glass"
        android:drawablePadding="8dip"
        android:hint="搜索全国城市"
        android:singleLine="true"
        android:paddingTop="8dip"
        android:paddingBottom="8dip"
        android:paddingLeft="10dip"
        android:paddingRight="30dip"
        android:textColor="#ff000000"
        android:textColorHint="#ffcccccc"
        android:textSize="15sp"
        android:background="@drawable/contact_search_box_edittext_keyword_background"/>
    
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_edit">

    </ListView>

</RelativeLayout>
